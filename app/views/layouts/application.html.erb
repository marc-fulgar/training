<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	<% if user_signed_in? %>
	  <body style="padding-top: 50px;" }>
	<% else%>
		<body style="padding-top: 0px;">
	<% end %>
		<% if alert %>
			<div class="alert alert-danger alert-dismissible" role="alert">
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			  <%= alert %>
			</div>
		<% end %>
		<% if notice %>
			<div class="alert alert-success alert-dismissible" role="alert">
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			  <%= notice %>
			</div>
		<% end %>
		
		<% if user_signed_in? %>
			<nav class="nav navbar-default navbar-fixed-top">
				<div class="container-fluid">
					<div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
					</div>
					<div class="collapse navbar-collapse navbar-right" id="main-nav">
			      <ul class="nav navbar-nav">
							<li><%= link_to "#{current_user.first_name} #{current_user.last_name}" , current_user %></li>
							<li><%= link_to 'Stafflist', users_path %></li>
							<li><%= link_to 'Deptartments', departments_path %></li>
							<li><%= link_to 'Newsfeed', posts_path %></li>
							<li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
	          </ul>
					</div>
				</div>
			</nav>
		<% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
