<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class=>'col-xs-5'}) do |f| %>
  <%= devise_error_messages! %>

	<p>
		<%= f.file_field :avatar %>
	</p>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, :class=>'form-control'%><br>
  </div>
	
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, :class=>'form-control'%><br>
  </div>
	
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, :class=>'form-control' %><br>
  </div>
	
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, :class=>'form-control' %><br>
  </div>
	
  <div class="field">
    <%= f.label :department %><br />
    <%= f.select :department_id, Department.all.pluck(:name, :id) , {prompt: 'Select one'}, :class=>'form-control' %><br>
	</div>
		
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position, autofocus: true, :class=>'form-control' %><br>
  </div>
	
	<div class="field">
		<br>
		<span id="helpBlock" class="help-block"><small>Leave blank to retain old password</small></span>
    <%= f.label :password, :class=>'sr-only'%>
    <%= f.password_field :password, autocomplete: "off", :class=>'form-control', :placeholder=>"New password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>'form-control', :placeholder=>"New password confirmation" %>
  </div>

  <div class="field">
		<br>
		<span id="helpBlock" class="help-block"><small>Current password required to save changes</small></span>
    <%= f.label :current_password, :class=> 'sr-only'%>
    <%= f.password_field :current_password, autocomplete: "off", :class=>'form-control', :placeholder=>'Current password'%>
  </div><br>
	
  <div class="actions">
    <%= f.submit "Update", :class=>'btn btn-primary'%>
  </div>

	<br>
	<%= link_to "Back", :back %>
<% end %>
