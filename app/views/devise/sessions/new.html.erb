<div class="vertical-center">
	<div class = "well well-lg col-sm-6 col-sm-offset-3">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-group"}) do |f| %>
		  <div class="form-group">
		    <%= f.label :username, :class => "sr-only" %>
		    <%= f.text_field :username, autofocus: true, :class => "form-control", :placeholder => "Username" %>
		  </div>
	
		  <div class="form-group">
		    <%= f.label :password, :class => "sr-only" %>
		    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
		  </div>

		  <div class="button">
		    <%= f.submit "Log in", :class => 'btn btn-primary btn-block' %>
		  </div>
		<% end %>
		
		<center><small>No account yet?</small></center>
		<%= link_to 'Sign up', new_user_registration_path, :class=>"btn btn-primary btn-block" %>
	</div>
</div>