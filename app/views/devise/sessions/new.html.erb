<div class = "col-xs-12"><br><br><br><br><br><br><br><br><br><br></div>
<div class = "col-xs-4"></div>
<div class = "col-xs-4">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
	  <div class="form-group">
	    <%= f.label :username, :class => "sr-only" %>
	    <%= f.text_field :username, autofocus: true, :class => "form-control", :placeholder => "Username" %>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :password, :class => "sr-only" %>
	    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
	  </div>

	  <div class="button">
	    <%= f.submit "Log in", :class => 'btn btn-primary btn-lg btn-block' %>
	  </div>
	<% end %>

	<br>
	<%= render "devise/shared/links" %>
</div>
<div class = "col-xs-4"></div>