<p id="notice"><%= notice %></p>

<h1 class="text-center">Listing Departments</h1>

<table class="table table-striped">
  <tbody>
		<tr>
    <% @departments.each do |department| %>
		</tr>
    <tr>
      <td><%= link_to department.name, department %> </td>
      <td><%= link_to 'Edit', edit_department_path(department) %>
      &nbsp; | <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Department', new_department_path %>