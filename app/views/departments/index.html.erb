<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <% @departments.each do |department| %>
  <tr>
    <td><%= link_to department.name, department %></td>
    <td width="112"><%= link_to 'Edit', edit_department_path(department)%>&nbsp;|&nbsp;<%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'Create', new_department_path, :class => "btn btn-primary" %>