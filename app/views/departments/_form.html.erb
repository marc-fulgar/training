    <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Department Name", required: true, maxlength: 30 %><br />
    <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
		<center><%= link_to 'Back to Departments', departments_path %></center>
	</div>
<% end %>