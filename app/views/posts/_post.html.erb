<table>
	<tr>
		<td>
			<table width="115">
				<tr><td><%= link_to (image_tag post.user.avatar.url(:icon)), user_path(post.user.id) %></td></tr>
				<tr><td><strong><%= link_to "#{post.user.first_name} #{post.user.last_name}", user_path(post.user.id) %></strong><br>
					<small><%= link_to (post.user.department.name ? post.user.department.name : ""), department_path(post.user.department.id) %></small></td></tr>
			</table>
		</td>
		<td>
			<table>
				<tr><td><%= post.content %></td></tr>
				<tr><td><br><small><%= post.created_at.in_time_zone('Hong Kong').strftime('%I:%M%p, %d %b, \'%y') %><small></td></tr>
			</table>
		</td>
	</tr>
</table>
<hr>