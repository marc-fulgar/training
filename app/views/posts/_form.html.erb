<%= form_for @post do |f| %>
  <div class="postform form-group">
    <%= f.label "Post", :class => 'sr-only' %><br>
    <%= f.text_area :content, rows: 3, :class => 'form-control textarea-fixed', :style=>"padding-right:100px", autofocus: true, :maxlength=>"200", :placeholder => "What's on your mind?", required: true%>
		<%= f.submit "Submit", :class => 'btn btn-primary postbutton' %>
  </div>
<% end %>
